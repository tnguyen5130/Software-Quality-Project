<UserControl
    x:Class="TMSProject.Classes.View.OrderSummary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMSProject.Classes.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="45,10,0,0" TextWrapping="Wrap" Text="Order Summary" VerticalAlignment="Top" FontSize="30" FontWeight="DemiBold" Foreground="Red"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,68,0,0" TextWrapping="Wrap" Text="Order Status: " VerticalAlignment="Top" RenderTransformOrigin="0.566,1.297" Height="29" Width="121" FontSize="20"/>
        <ComboBox Margin="171,68,329,354" Name="AllStatus"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,130,0,0" TextWrapping="Wrap" Text="Start Date:" VerticalAlignment="Top" RenderTransformOrigin="0.193,0.439" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="398,130,0,0" TextWrapping="Wrap" Text="End Date:" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.5,-0.105"/>
        <DatePicker Margin="154,130,426,295" Name="Start_Order_Date" RenderTransformOrigin="0.606,-0.473"></DatePicker>
        <DatePicker Margin="513,130,62,295" Name="End_Order_Date"></DatePicker>


        <DataGrid Margin="45,220,28,22" Name="Order_Summary"></DataGrid>
        <Button Content="Load Order" Name="Load_Order_Button" Click="Load_Order_Button_Click" HorizontalAlignment="Left" Margin="360,176,0,0" VerticalAlignment="Top" Width="111" RenderTransformOrigin="0.49,0.152" Height="39"/>

    </Grid>




</UserControl>
     

    

