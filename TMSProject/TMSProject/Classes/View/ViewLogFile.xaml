<UserControl x:Class="TMSProject.Classes.View.ViewLogFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMSProject.Classes.View"
      mc:Ignorable="d" 
        x:Name="myWin"
      d:DesignHeight="540" d:DesignWidth="1010">


    <Grid Background="White">
        <Button Content="View Log File" HorizontalAlignment="Left" Margin="39,10,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="-0.972,0.459" Height="37" Click="Button_Click"/>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" Margin="0,124,0,0" >

            <TextBlock FontSize="20" Foreground="Black" Name="debugLog"/>

        </ScrollViewer>

        <TextBox Name="currentPath" Foreground="Black" HorizontalAlignment="Left" Height="23" Margin="187,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="426"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="640,15,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>

</UserControl>
